import Foundation

// Get the current system time zone
let currentZone = TimeZone.current
print("Current Time Zone: \(currentZone.identifier)")

print(1)

// Create a specific time zone by identifier
if let newYorkTimeZone = TimeZone(identifier: "America/New_York") {
    print("New York Time Zone: \(newYorkTimeZone)")
}

print(2)
      
// Get UTC (Universal Coordinated Time)
let utcTimeZone = TimeZone(secondsFromGMT: 0)
print("UTC Time Zone: \(utcTimeZone?.identifier ?? "Unknown")")

print(3)

// List all known time zone identifiers
let allTimeZones = TimeZone.knownTimeZoneIdentifiers
print("All Time Zones: \(allTimeZones)")

print(4)

var timezone = TimeZone(identifier: "Europe/London")!
print("Offset from GMT of Europe/London: \(timezone.secondsFromGMT()/3600) hours") // Output: 0 or 1 (depends on DST)

print(5)

timezone = TimeZone(identifier: "Asia/Makassar")!
print("Offset from GMT of Asia/Makassar: \(timezone.secondsFromGMT()/3600) hours") // Output: 0 or 1 (depends on DST)


